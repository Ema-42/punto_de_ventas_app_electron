{
  "name": "punto_de_venta_app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@prisma/client": "^6.4.1",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.8",
    "jspdf": "^3.0.0",
    "jspdf-autotable": "^5.0.2",
    "date-fns": "^4.1.0",
    "sqlite3": "^5.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.5.0",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.3",
    "prisma": "^6.4.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.2.2"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.tuempresa.puntodeventa",
    "productName": "Punto de Venta App",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ],
      "icon": "src/assets/icon.png",
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      }
    ]
  }
}
